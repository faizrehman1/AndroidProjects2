<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/listvieewitem"
    style="@style/list">

    <ImageView
        android:id="@+id/albumArtInListView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/playingmusic"
        android:padding="3dp" />

    <TextView
        style="@style/play"
        android:id="@+id/titleTextViewInSingleListViewItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="01234567890123456789"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/albumArtInListView"
        android:layout_toEndOf="@+id/albumArtInListView"
        android:textSize="20dp"
        android:gravity="center_vertical" />


</RelativeLayout>